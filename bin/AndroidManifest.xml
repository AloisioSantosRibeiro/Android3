<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.v3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="android.v3.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="android.v3.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
        <activity
            android:name="android.v3.ThemeDarkActivity"
            android:label="@string/title_activity_theme_dark"
            android:theme="@android:style/Theme.Holo"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
        <activity
            android:name="android.v3.ThemeLightActivity"
            android:label="@string/title_activity_theme_light"
            android:theme="@android:style/Theme.Holo.Light"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
        <activity
            android:name="android.v3.ThemeDarkLightActivity"
            android:label="@string/title_activity_theme_dark_light"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
        <activity
            android:name="android.v3.ThemeColorActivity"
            android:label="@string/title_activity_theme_color"
            android:theme="@style/CustomActionBarTheme2"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
        <activity
            android:name="android.v3.ThemeImageActivity"
            android:label="@string/title_activity_theme_image"
            android:theme="@style/CustomActionBarTheme"
            android:parentActivityName="android.v3.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.v3.MainActivity" />
        </activity>
    </application>

</manifest>
