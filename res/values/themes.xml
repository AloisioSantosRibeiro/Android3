<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarImage</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBarImage"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>



    
    
    <style name="CustomActionBarThemeTitleBlue"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarBlue</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextBlue</item>
<!--    <item name="android:actionMenuTextColor">@color/actionbar_text</item>    -->
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBarBlue"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextBlue</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleTextBlue"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
<!--    <item name="android:textColor">@color/actionbar_text</item>    -->
        <item name="android:textColor">#0000FF</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabTextBlue"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
<!--       <item name="android:textColor">@color/actionbar_text</item>      -->
        <item name="android:textColor">#0000FF</item>
    </style>



    
    
    <style name="CustomActionBarThemeTitleGreen"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBarGreen</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextGreen</item>
<!--    <item name="android:actionMenuTextColor">@color/actionbar_text</item>    -->
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBarGreen"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextGreen</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleTextGreen"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
<!--    <item name="android:textColor">@color/actionbar_text</item>    -->
        <item name="android:textColor">#00FF00</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabTextGreen"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
<!--       <item name="android:textColor">@color/actionbar_text</item>      -->
        <item name="android:textColor">#F0FF0F</item>
    </style>
    
    
    
    
    
    
    <style name="CustomActionBarThemeTitleRed"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBarRed</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabTextRed</item>
<!--    <item name="android:actionMenuTextColor">@color/actionbar_text</item>    -->
    </style>
    
    <!-- ActionBar styles -->
    <style name="MyActionBarRed"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/MyActionBarTitleTextRed</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleTextRed"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
<!--    <item name="android:textColor">@color/actionbar_text</item>    -->
        <item name="android:textColor">#FF0000</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabTextRed"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
<!--       <item name="android:textColor">@color/actionbar_text</item>      -->
        <item name="android:textColor">#FF0000</item>
    </style>



    
    
    <style name="CustomActionBarThemeOverlay"
           parent="@android:style/Theme.Holo.Light">
<!--       <item name="android:actionBarStyle">@style/ActionBarImage</item>  -->
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>